<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="28dp"
            android:background="#D3D3D3">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:textColor="@color/forestGreen"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Welcome to your digital NPS Passport\n\nDeveloped by \nZindel"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintVertical_bias="0.898"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#E0E0E0" tools:layout_editor_absoluteY="99dp"
                    tools:layout_editor_absoluteX="1dp" tools:ignore="MissingConstraints">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome"
                        android:textColor="@color/brown"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/please_enter_your_username"
                        android:textColor="@color/lightGreen"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"/>

                <EditText
                        android:id="@+id/usernameEditText"
                        android:inputType="text"
                        android:autofillHints=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColorHint="@color/forestGreen"
                        android:textColor="@color/forestGreen"
                        android:hint="@string/username"/>

                <Button
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/login"/>
                <Button
                        android:id="@+id/create_account_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/create_an_account"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</LinearLayout>
